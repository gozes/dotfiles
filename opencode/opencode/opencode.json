{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"instructions": [
		"$ZK_NOTEBOOK_DIR/AGENTS.md",
		"$HOME/Code/Work/jira/AGENTS.md",
		"$HOME/Code/Work/*/AGENTS.md"
	],
	"lsp": {
		"zk": {
			"command": [
				"zk lsp"
			],
			"extensions": [
				".md",
				".go",
				".yaml",
				".yml",
				".py",
				".json",
				".lua"
			]
		}
	},
	"mcp": {
		"jira": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://mcp.atlassian.com/v1/sse"
			],
			"enabled": true
		},
		"github": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"-e",
				"GITHUB_PERSONAL_ACCESS_TOKEN=$GITHUB_PAT",
				"-e",
				"GITHUB_READ_ONLY=1",
				"-e",
				"GITHUB_HOST=https:$GITHUB_HOST",
				"ghcr.io/github/github-mcp-server:latest"
			],
			"enabled": true
		},
		"sequential-thinking": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true
		},
		"memory": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"environment": {
				"MEMORY_FILE_PATH": "$HOME/.config/mcpmemory/memory.json"
			}
		},
		"firefox": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"-p",
				"127.0.0.1:8089:8089",
				"-e",
				"EXTENSION_SECRET=$FF_MCP",
				"-e",
				"CONTAINERIZED=true",
				"browser-control-mcp"
			],
			"enabled": true
		},
	},
}
