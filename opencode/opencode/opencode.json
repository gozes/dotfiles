{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"instructions": [
		"$ZK_NOTEBOOK_DIR/AGENTS.md",
		"$HOME/Code/Work/jira/AGENTS.md",
		"$HOME/Code/Work/*/AGENTS.md"
	],
	"lsp": {
		"zk": {
			"command": [
				"zk lsp"
			],
			"extensions": [
				".md",
				".go",
				".yaml",
				".yml",
				".py",
				".json",
				".lua"
			]
		}
	},
	"mcp": {
		"sequential-thinking": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true
		},
		"memory": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-memory"
			],
		},
		"firefox": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"-p",
				"127.0.0.1:8089:8089",
				"-e",
				"EXTENSION_SECRET=$FF_MCP",
				"-e",
				"CONTAINERIZED=true",
				"browser-control-mcp"
			],
			"enabled": true
		},
	},
}
