{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"instructions": [
		"$ZK_NOTEBOOK_DIR/AGENTS.md",
		"$HOME/Code/Work/jira/AGENTS.md",
		"$HOME/Code/Work/*/AGENTS.md"
	],
	"lsp": {
		"zk": {
			"command": [
				"zk lsp"
			],
			"extensions": [
				".md",
				".go",
				".yaml",
				".yml",
				".py",
				".json",
				".lua"
			]
		}
	},
	"mcp": {
		"jira": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://mcp.atlassian.com/v1/sse"
			],
			"enabled": true
		},
		"github": {
			"type": "local",
			"command": [
				"$HOME/Code/Work/gh-mcp.fish"
			],
			"enabled": true
		},
		"sequential-thinking": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				" @modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true
		},
		"memory": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"environment": {
				"MEMORY_FILE_PATH": "$HOME/.config/mcpmemory/memory.json"
			}
		},
		"firefox": {
			"type": "local",
			"command": [
				"$HOME/Code/Work/firfox-mcp.fish"
			],
			"enabled": true
		},
	},
}
