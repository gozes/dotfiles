{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "disableWorkspaceFolders": true,
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        "nim": {
            "command": "nimlsp",
            "filetypes": [
                "nim"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json",
        "python"
    ],
    "python.jediEnabled": false
}
